<Window x:Class="NeoTUN.Windows.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NeoTUN" Height="600" Width="900"
        Background="#FF1E1E1E">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Profiles -->
        <Border Grid.Column="0" Background="#FF252526" BorderBrush="#FF3F3F46" BorderThickness="0,0,1,0">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Profiles" Foreground="White" FontSize="18" FontWeight="Bold"/>
                
                <Button Grid.Row="1" Content="+ Import Profile" 
                        Background="#FF2D2D30" Foreground="White"
                        Command="{Binding AddProfileCommand}" Margin="0,10"/>
                
                <ListBox Grid.Row="2" 
                         ItemsSource="{Binding Profiles}"
                         SelectedItem="{Binding SelectedProfile}"
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Server}" Foreground="Gray" FontSize="12"/>
                                <TextBlock Text="{Binding Protocol}" Foreground="LightBlue" FontSize="10"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <StackPanel Grid.Row="3">
                    <Button Content="Import from URI" Background="#FF4CAF50" Foreground="White"
                            Command="{Binding AddProfileCommand}" Margin="0,5"/>
                    <Button Content="Delete Profile" Background="#FFF44336" Foreground="White"
                            Command="{Binding DeleteProfileCommand}"
                            CommandParameter="{Binding SelectedProfile}" Margin="0,5"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Right Panel -->
        <Grid Grid.Column="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Status -->
            <Border Grid.Row="0" Background="#FF2D2D30" Padding="20" Margin="0,0,0,20">
                <TextBlock Text="{Binding StatusText}" Foreground="White" 
                           FontSize="18" HorizontalAlignment="Center"/>
            </Border>
            
            <!-- Controls -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="Connect" Background="#FF4CAF50" Foreground="White"
                        Command="{Binding ConnectCommand}" Margin="5" Padding="20,10"
                        IsEnabled="{Binding CanConnect}"/>
                <Button Content="Disconnect" Background="#FFF44336" Foreground="White"
                        Command="{Binding DisconnectCommand}" Margin="5" Padding="20,10"
                        IsEnabled="{Binding CanDisconnect}"/>
            </StackPanel>
            
            <!-- Logs -->
            <Border Grid.Row="2" Background="#FF2D2D30" Margin="0,20,0,0">
                <ListBox ItemsSource="{Binding Logs}" Background="Transparent" 
                         Foreground="White" BorderThickness="0"/>
            </Border>
        </Grid>
    </Grid>
</Window>