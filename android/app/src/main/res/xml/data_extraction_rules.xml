<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="vpn_profiles.xml"/>
        <exclude domain="sharedpref" path="app_settings.xml"/>
        <exclude domain="database" path="vpn_database.db"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow basic app data transfer between devices -->
        <include domain="sharedpref" path="ui_preferences.xml"/>
    </device-transfer>
</data-extraction-rules>